<html>
    <head>
        <meta charset="UTF-8">
        <title>{{page_title}}</title>
        <!--
        <link rel="stylesheet"
              href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
              crossorigin="anonymous">
        -->
    </head>
    <body>
        <div align="center">
            <h1 class="bg-primary text-white p-2">{{title}}</h1>
            <div class="container mt-4">
                <p>{{message_label}}</p>
                <br>
                <form method="post" action="/">
                    <div class="form-group">
                        <div align="left">
                            <label for="login_id">{{login_id_label}}</label>
                        </div>
                        <input type="text" class="form-control" id="login_id" name="login_id" size="50" value="{{login_id}}">
                    </div>
                    <div class="form-group">
                        <div align="left">
                            <label for="pass">{{password_label}}<br></label>
                        </div>
                        <input type="password" class="form-control" id="password" name="password" size="50" value="{{password}}">
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">{{submit_login}}</button>
                    <br>
                    <p style="color:red">{{&result_login}}</p>
                    <br><br>
                    <hr>
                    <br><br><br>
                </form>
                <form method="get" action="/sign_in">
                    <button type="submit" class="btn btn-primary">{{submit_sign_in}}</button>
                </form>
            </div>
        </div>
    </body>
</html>
